                </div>
                <div class="col-md-7" style="opacity: 0.9;">
                    <div class="col-md-10">
                        <input type="text" style="width:100%;border-radius: 5vh; height: 3.5vh; margin-top: 0.7vh;border: unset; background: linear-gradient(to right, #4facac, #d7d7ec);" id="filtro_nome_usuario" placeholder="Procure por alguem.">
                    </div>
                    <div class="col-md-2" style="margin-top: 0.6%">
                        <button type="submit" onclick="PesquisarUsuario()" data-target="#ModalPesquisa" data-toggle="modal" class="btn btn-secondary btn-lg btn-block " style="color: white; border: solid; border-radius: 3vh;">Pesquisar</button>
                    </div>
                </div>
                <div class="col-md-2">
                    <a style="font-size: 1.7em;color: white;" class="btn btn-dark pull-right" @Html.ActionLink("Sair", "SairSessao", "Dashboard")</a>
                </div>
            </div>
            <div id="corpo_geral" class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
