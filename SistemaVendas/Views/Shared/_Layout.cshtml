                            <li>@Html.ActionLink("Realizar Compra", "RealizarCompra", "PainelGeral")</li>
                            <li>@Html.ActionLink("Estornar Venda", "EstornarVenda", "PainelGeral")</li>
                        </ul>*@
                </div>
            </div>
        </div>
        <div id="corpo_conteudo" class="containr body-content">
            @RenderBody()
        </div>

    </body>
</html>


<!-- Modal -->
<div class="modal fade" id="ModalPesquisa" tabindex="-1"  role="dialog" aria-labelledby="ModalPesquisa" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" style="position: absolute; margin-left: -8%; margin-top: -10%; opacity: 1; width: 18%;" role="document">
        <div class="modal-content" style="border-radius: 3em;background-image: linear-gradient(to bottom, white, #b9f2f3);">
            <div class="modal-body">
                <h4 style="text-align:center"><b>Usuários</b></h4>
                <div id="div_conteudo_modal">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>
    

