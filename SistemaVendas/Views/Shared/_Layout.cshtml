
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.4/css/bootstrap-select.min.css">

    <!-- Latest compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.4/js/bootstrap-select.min.js"></script>

    <!-- (Optional) Latest compiled and minified JavaScript translation files -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.4/js/i18n/defaults-pt_BR.min.js"></script>

<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="opacity:0.8;">
        <div id="botoes_top" class="col-lg-12">
            <div style="margin-top: 0.2%;" id="nome_usuario" class="col-md-3">

            </div>
            <div class="col-md-7">
                <div class="col-md-10">
                    <input type="text" style="width:100%" id="filtro_nome_usuario" class="form-control" placeholder="Procure por alguem.">
                </div>
                <div class="col-md-2" style="margin-top: 0.6%">
                    <button type="submit" onclick="PesquisarUsuario()" class="btn btn-secondary btn-lg btn-block">Pesquisar</button>
                </div>
            </div>
            <div class="col-md-2">
                <a style="font-size: 1.7em;color: white;" class="btn btn-dark pull-right" @Html.ActionLink("Sair", "SairSessao", "Dashboard")</a>
            </div>
        </div>
        <div id="corpo_geral" class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("Realizar Venda", "RealizarVenda", "PainelGeral", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                @*<ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Cadastrar Cliente", "CadastrarCliente", "PainelGeral")</li>
                    <li>@Html.ActionLink("Relatório Vendedor", "RelatorioVendedor", "PainelGeral")</li>
                    <li>@Html.ActionLink("Cadastrar Vendedor", "CadastrarVendedor", "PainelGeral")</li>
                    <li>@Html.ActionLink("Realizar Compra", "RealizarCompra", "PainelGeral")</li>
                    <li>@Html.ActionLink("Estornar Venda", "EstornarVenda", "PainelGeral")</li>
                </ul>*@
            </div>
        </div>
    </div>
    <div id="corpo_conteudo" class="containr body-content">
        @RenderBody()
    </div>

</body>
</html>

<script src="~/Scripts/jquery.mask.js"></script>
