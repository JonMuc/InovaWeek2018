    var statusComentario = false;



    BuscarNome = function () {
        $.post(UrlBuscarNome, function (res) {
            $("#nome_usuario").append("<span style='font-size: 2em; color: white;'>" + res.Data.Nome + "</span>");
        });
    }

    BuscarFeed = function () {
        $.post(UrlBuscarUltimasPostagemUsuarios, function (res) {
            if (res.Data != null) {
                for (x = 0; x < res.Data.length; x++) {
                    if (res.Data[x].Avaliei) {
                        $("#feed_comentarios").append("<div><span class='col-md-12' style='font-size: 1em; color: black;'>" + res.Data[x].Usuario.Nome + " curtiu sua publicação:  </br>" + res.Data[x].Conteudo + "</span><p><span  style='font-size: 1em; color: black;' class='pull-right'>" + res.Data[x].DataString + "</span></p></div>");
                    } else {
                        $("#feed_comentarios").append("<div><span class='col-md-12' style='font-size: 1em; color: black;'>" + res.Data[x].Usuario.Nome + " comentou sua publicação:  </br>" + res.Data[x].Conteudo + "</span><p><span  style='font-size: 1em; color: black;' class='pull-right'>" + res.Data[x].DataString + "</span></p></div>");
