        }
    }

    ObterAvaliacaoUsuario = function (NotaAvaliacao, QuantidadeAvaliacao) {
        media = NotaAvaliacao / QuantidadeAvaliacao;
        if (media > 4) {
            return "Otimo.";
        } else if (media > 3 & media < 4) {
            return "Bom";
        } else if (media > 2 & media < 3) {
            return "Regular";
        } else if (media > 1 & media < 2) {
            return "Ruim";
        } else if (media > 0 & media < 1) {
            return "Péssimo";
        }
    }

